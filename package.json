{
  "name": "spring-broken-ai-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 7777",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky || true",
    "postinstall": "prisma generate --no-hints || echo 'Prisma Client generation failed, but continuing...'",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate:prod": "dotenv -e .env.production -- prisma generate",
    "db:push:prod": "dotenv -e .env.production -- prisma db push",
    "db:seed:prod": "dotenv -e .env.production -- tsx prisma/seed.ts",
    "db:clear": "tsx prisma/clear.ts",
    "db:clear:prod": "dotenv-cli -e .env.production -- tsx prisma/clear.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:reset:prod": "dotenv-cli -e .env.production -- prisma migrate reset --force && npm run db:seed:prod",
    "deploy:build": "npm run db:generate && npm run build",
    "deploy:setup": "npm run db:push && npm run db:seed",
    "deploy:setup:prod": "npm run db:generate:prod && npm run db:push:prod && npm run db:seed:prod && npm run build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart spring-broken-ai-blog",
    "pm2:stop": "pm2 stop spring-broken-ai-blog",
    "pm2:delete": "pm2 delete spring-broken-ai-blog"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.9",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "6.16.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/archiver": "^6.0.3",
    "@types/multer": "^2.0.0",
    "@uiw/react-codemirror": "^4.25.1",
    "@uiw/react-md-editor": "^4.0.8",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "chromadb": "^3.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.544.0",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.11.0",
    "multer": "^2.0.2",
    "next": "15.0.0",
    "next-auth": "^4.24.11",
    "novel": "^1.0.2",
    "openai": "^6.10.0",
    "prisma": "6.16.1",
    "prosemirror-markdown": "^1.13.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "react-snowfall": "^2.4.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-slug": "^7.0.1",
    "remark-stringify": "^11.0.0",
    "remark-toc": "^9.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "turndown": "^7.2.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-next": "15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
